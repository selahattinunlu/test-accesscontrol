// schema.prisma

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // uses connection pooling
}

model Post {
  id       String  @id @default(cuid())
  title    String
  body     String?
  author   User?   @relation(fields: [authorId], references: [id])
  authorId String?

  @@map(name: "posts")
}

model User {
  id       String @id @default(cuid())
  username String @unique
  posts    Post[]

  @@map(name: "users")
}
